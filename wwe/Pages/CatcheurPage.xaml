<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wwe.Pages.Catcheur">
            <!--Title="Catcheur"-->

    <CollectionView ItemsSource="{Binding Catcheurs}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame CornerRadius="12" Padding="10" Margin="6" BackgroundColor="#1F1F1F" HasShadow="True">
                    <HorizontalStackLayout Spacing="10">

                        <!-- Image -->
                        <Image Source="{Binding Image}" HeightRequest="100" WidthRequest="100" Aspect="AspectFill" />

                        <!-- Texte -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Nom}" FontAttributes="Bold" FontSize="20" TextColor="White"/>
                            <Label Text="{Binding AliasTexte}" FontSize="16" TextColor="#FFD700"/>
                            <Label Text="{Binding NationaliteTexte}" FontSize="14" TextColor="White"/>
                            <Label Text="{Binding AgeTexte}" FontSize="14" TextColor="White"/>
                            <Label Text="{Binding PalmaresTexte}" FontSize="12" TextColor="White"/>
                            <Label Text="{Binding ActifTexte}" FontSize="12" TextColor="White"/>
                            <Label Text="{Binding HOFTexte}" FontSize="12" TextColor="White"/>
                        </VerticalStackLayout>

                    </HorizontalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>


</ContentPage>
